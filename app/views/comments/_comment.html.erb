<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong>
            <%= comment.name %>
          </strong>
          <%= comment.comment %>
        </p>
        <div class="file">
          <% if comment.file.attached? %>
            <%= link_to 'Download attached file', comment.file %>
<!--            Пофиксить-->
<!--            <div class="remove-file">-->
              <%#= link_to 'Remove', post_comment_destroy_attachment_path(comment.post, comment.file.first), method: :delete, data: { confirm: 'Are you sure?' } %>
<!--            </div>-->
          <% else %>
            <% nil %>
          <% end %>
        </div>
      </div>
    </div>
    <% if comment.user_id == current_user.id %>
      <%= link_to 'Delete', [comment.post, comment], method: :delete, class: "button is-danger",
                  data: { confirm: 'Are you sure that you want to delete your comment?' }%>
  <% else %>
    <% nil %>
      <% end %>
  </article>
</div>
