<div id="post-id" data-post-id="<%= @post_id %>"> </div>
<div id="comment_<%= comment.id %>">
<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <div class="content">
          <strong>
            <%= comment.name %>
          </strong>
          </div>
        <% @comment = comment %>
          <%= @comment.comment %>
        <% if @comment.best? %>
          <h1>лучший</h1>
          <% else %>
          <h1>не лучший</h1>
          <% end %>
        <%=link_to 'Best', choose_best_post_comment_path(comment.post, comment), method: :patch, remote: true,
                   class: 'best-answer-btn btn btn-success', id: "best-comment-link-#{comment.id}"%>
        <br>
        <h>Comments:</h>
        <br>
        <%= render @comment.answers %>
        <%= render 'answers/form' %>
          <br>
            <br>
        <div id="voting">
            <%= link_to like_post_comment_path(comment.post, comment), method: :put do %>
          <%= image_tag "1200px-Green_Arrow_Up.svg.png" %>
          <% end %>
          <div class="vot">
            <%= comment.get_upvotes.size-comment.get_downvotes.size %>
          </div>
          <div class="downbutton">
            <%= link_to dislike_post_comment_path(comment.post, comment), method: :put do %>
              <%= image_tag "1200px-Red_Arrow_Down.svg.png" %>
              <% end %>
          </div>
        </div>
        </p>
        <div class="file">
          <% if comment.file.attached? %>
            <%= link_to 'Download attached file', comment.file %>
<!--            Пофиксить-->
<!--            <div class="remove-file">-->
              <%#= link_to 'Remove', post_comment_destroy_attachment_path(comment.post, comment.file.first), method: :delete, data: { confirm: 'Are you sure?' } %>
<!--            </div>-->
          <% else %>
            <% nil %>
          <% end %>
        </div>
      </div>
    </div>
    <% if can?(:destroy, Comment) %>
      <%= link_to 'Delete', [comment.post, comment], remote: true, method: :delete, class: "button is-danger",
                  data: { confirm: 'Are you sure that you want to delete this answer?' }%>
      <% end %>
  </article>
</div>
</div>
