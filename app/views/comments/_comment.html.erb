<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong>
            <%= comment.name %>
          </strong>
          <%= comment.comment %>
        </p>
      </div>
    </div>
    <% if comment.user_id == current_user.id %>
      <%= link_to 'Delete', [comment.post, comment], method: :delete, class: "button is-danger",
                  data: { confirm: 'Are you sure that you want to delete your comment?' }%>
  <% else %>
    <% nil %>
      <% end %>
  </article>
</div>