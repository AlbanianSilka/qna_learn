<%= simple_form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <div class="control">
      <h1 hidden><%= (f.text_field :best, value: false ).freeze %></h1>
      <h1 hidden><%= (f.text_field :user_id, value: "#{current_user.id}").freeze %></h1>
      <%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :comment, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <div class="field">
    <%= f.label :file %>
    <%= f.file_field :file %>
  </div>
  <%= f.button :submit, class: "button is-primary"%>
<% end %>